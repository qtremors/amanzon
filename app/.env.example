# =============================================================================
# Amanzon Environment Variables
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core
# -----------------------------------------------------------------------------
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# -----------------------------------------------------------------------------
# Database (Supabase PostgreSQL)
# -----------------------------------------------------------------------------
# Get this from: Supabase Dashboard → Project Settings → Database → Connection string (URI)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.xxxxxxxxxxxx.supabase.co:5432/postgres

# -----------------------------------------------------------------------------
# Supabase Storage (for images/media)
# -----------------------------------------------------------------------------
# Get these from: Supabase Dashboard → Project Settings → API
SUPABASE_URL=https://xxxxxxxxxxxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_BUCKET=media

# -----------------------------------------------------------------------------
# Django Superuser (for deployment without shell access)
# -----------------------------------------------------------------------------
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=your-secure-password

# -----------------------------------------------------------------------------
# Email (Gmail SMTP) - Still needed for contact form, order confirmations
# -----------------------------------------------------------------------------
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=Amanzon <support@example.com>

# -----------------------------------------------------------------------------
# Production Settings (for Render deployment)
# -----------------------------------------------------------------------------
# DEBUG=False
# ALLOWED_HOSTS=amanzon.onrender.com
# CSRF_TRUSTED_ORIGINS=https://amanzon.onrender.com

# -----------------------------------------------------------------------------
# Razorpay Payment Gateway (optional - demo mode if not set)
# -----------------------------------------------------------------------------
# Get these from: Razorpay Dashboard → Settings → API Keys
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxx

