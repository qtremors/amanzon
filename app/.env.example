# Amanzon Environment Variables

# Django
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Superuser (for deployment without shell access)
DJANGO_SUPERUSER_USERNAME=tremors
DJANGO_SUPERUSER_EMAIL=tremors@amanzon.com
DJANGO_SUPERUSER_PASSWORD=your-secure-password

# For Render deployment, use:
# DEBUG=False
# ALLOWED_HOSTS=your-app.onrender.com
# CSRF_TRUSTED_ORIGINS=https://your-app.onrender.com

# Razorpay (Test Mode)
RAZORPAY_KEY_ID=rzp_test_xxxxx
RAZORPAY_KEY_SECRET=xxxxx

# Email (Gmail SMTP)
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL="Amanzon <support@example.com>"
